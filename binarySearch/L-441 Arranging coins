class Solution(object):
    def arrangeCoins(self, n):
        """
        :type n: int
        :rtype: int
        """
        low = 0
        high = n
        
        while low <= high:
            mid = (low + high) // 2
            coins_used = (mid * (mid + 1)) // 2
            
            if coins_used == n:
                return mid
            elif coins_used < n:
                low = mid + 1
            else:
                high = mid - 1
        
        return high  # last valid k
